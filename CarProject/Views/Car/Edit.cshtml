@model CarProject.Core.Domain.Car

<h1>Edit Car</h1>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label>Make</label>
        <input asp-for="Make" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Model</label>
        <input asp-for="Model" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Year</label>
        <input asp-for="Year" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Color</label>
        <input asp-for="Color" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Price</label>
        <input asp-for="Price" class="form-control" required />
    </div>
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-warning">Save Changes</button>
</form>
<a asp-action="Index" class="btn btn-secondary">Back to List</a>
