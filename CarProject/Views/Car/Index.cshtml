@model IEnumerable<CarProject.Core.Domain.Car>

<h1>Car List</h1>
<a asp-action="Create" class="btn btn-primary">Add New Car</a>

<table class="table">
    <thead>
        <tr>
            <th>Make</th>
            <th>Model</th>
            <th>Year</th>
            <th>Color</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model)
        {
            <tr>
                <td>@car.Make</td>
                <td>@car.Model</td>
                <td>@car.Year</td>
                <td>@car.Color</td>
                <td>@car.Price</td>
                <td>
                    <a asp-action="Details" asp-route-id="@car.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@car.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
